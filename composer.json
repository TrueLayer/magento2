{
    "name": "truelayer/magento2",
    "description": "TrueLayer extension for Magento 2",
    "type": "magento2-module",
    "version": "2.3.0",
    "license": [
        "OSL-3.0",
        "AFL-3.0"
    ],
    "require": {
        "magento/framework": ">=103.0.0",
        "magento/module-payment": ">=100.1.0",
        "magento/module-checkout": ">=100.1.0",
        "magento/module-sales": ">=100.1.0",
        "truelayer/client": ">=1.2.0",
        "php": ">=7.4.0"
    },
    "require-dev": {
        "phpstan/phpstan": "*",
        "bitexpert/phpstan-magento": "*"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "TrueLayer\\Connect\\": ""
        }
    },
    "config": {
        "allow-plugins": {
            "magento/composer-dependency-version-audit-plugin": true,
            "magento/magento-composer-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "magento/inventory-composer-installer": true,
            "php-http/discovery": true,
            "magento/composer-root-update-plugin": true
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse --memory-limit=-1",
        "checks": [
            "@analyse"
        ]
    },
    "repositories": {
        "magento": {
            "type": "composer",
            "url": "https://repo.magento.com/"
        }
    }
}
